<?php 
function titulo(){
	echo ("Calculadora: <br/>");
}

function soma($num1, $num2){

	return ($num1 + $num2);
}

function subtracao($num1, $num2){

	return ($num1 - $num2);
}

function divisao($num1, $num2){

	return ($num1 / $num2);
}

function multiplicacao($num1, $num2){

	return ($num1 * $num2);
}

function menu(){

	echo("A calculadora realiza as seguintes operações <br />");
	echo("1- Soma <br />");
    echo("2- Subtração <br />");
    echo("3- Divisão <br />");
    echo("4- Multiplicação <br />");
    echo("5- Sair <br />");

    echo ("Digite o número da operação desejada");
}

$valor1 = 10; $valor2 = 2;
$operacao = 1; 


titulo();
echo ("Os números digitados foram $valor1 e $valor2 <br />");
//função para mostrar o menu
menu();
if ($operacao == 1){
	echo("O cálculo escolhido foi: Soma <br />");
	$resposta = soma($valor1, $valor2);
	echo("A soma de $valor1 e $valor2 é: $resposta");
}
elseif ($operacao == 2) {
	echo("O cálculo escolhido foi: Subtração <br />");
	$resposta = subtracao($valor1, $valor2);
	echo("A subtração de $valor1 e $valor2 é: $resposta");
}
elseif ($operacao == 3) {
	echo("O cálculo escolhido foi: ão <br />");
	$resposta = subtracao($valor1, $valor2);
	echo("A subtração de $valor1 e $valor2 é: $resposta");
}
 ?>


